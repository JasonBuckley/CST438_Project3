        position: relative;
        margin: 1rem;
        width: 300px;
    }

    .book img {
        width: 100%;
    }

    .book-info {
        color: #eee;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.5rem 1rem 1rem;
        letter-spacing: 0.5px;
    }

    .book-info h3 a {
        color: #eee !important;
        text-decoration: none !important;
        margin: 0;
    }

    .book-info span {
        background-color: #22254b;
        border-radius: 3px;
        font-weight: bold;
        padding: 0.25rem 0.5rem;
    }
